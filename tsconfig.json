{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "ES6",
    "lib": [ "es2015", "dom" ],
    "isolatedModules": true,
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "skipLibCheck": true,
  },
  "include": ["lib/**/*", "test/**/*"],
  "exclude": ["node_modules"],
}
